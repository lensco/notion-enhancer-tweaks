// Color hash
colors = {
	gray: #999
	brown: #c3763a
	orange: #ff6000
	yellow: #e2bf00
	green: #00991a
	blue: #076cf1
	purple: #9a66ff
	pink: #ff5dbb
	red: #fa0000
}

text_light = #37352f
text_dark = rgba(255,255,255,.9)


:root
	--theme_light--font_sans 'SF Pro Display'
	--theme_dark--font_sans 'SF Pro Display'

	/* Colors */
	--theme_light--primary colors.blue
	--theme_dark--primary #4a99ff

	for $color, value in colors
		--theme_light--text_{$color} value
		--theme_light--bg_{$color} alpha(value, 15%)
		--theme_light--bg_{$color}-text mix(value, text_light, 80%)
		--theme_light--line_{$color} alpha(value, 15%)
		--theme_light--line_{$color}-text mix(value, text_light, 80%)
		--theme_dark--bg_{$color} alpha(value, 35%)
		--theme_dark--bg_{$color}-text mix(value, text_dark, 30%)
		--theme_dark--line_{$color} alpha(value, 35%)
		--theme_dark--line_{$color}-text mix(value, text_dark, 30%)


